<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="lib.model">

  <table name="project" treeMode="NestedSet">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="title" type="varchar" required="true" size="255" />
    <index>
      <index-column name="title" />
    </index>
    <column name="description" type="longvarchar" />
    <column name="slug" type="varchar" size="60" />
    <index>
      <index-column name="slug" />
    </index>
    <column name="lft" type="integer" required="true" nestedSetLeftKey="1" />
    <column name="rgt" type="integer" required="true" nestedSetRightKey="1" />
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
  </table>

  <table name="category">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="name" type="varchar" required="true" size="255" />
    <index>
      <index-column name="name" />
    </index>
    <column name="description" type="longvarchar" />
    <column name="is_working" type="boolean" />
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
  </table>

  <table name="timenote_type">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="name" type="varchar" required="true" size="255" />
    <index>
      <index-column name="name" />
    </index>
    <column name="description" type="longvarchar" />
    <column name="slug" type="varchar" size="60" />
    <index>
      <index-column name="slug" />
    </index>
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
  </table>

  <table name="hour">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="project_id" type="integer" required="true" />
    <foreign-key foreignTable="timenote_project">
      <reference local="project_id" foreign="id" />
    </foreign-key>
    <column name="type_id" type="integer" required="true" />
    <foreign-key foreignTable="timenote_type">
      <reference local="type_id" foreign="id" />
    </foreign-key>
    <column name="user_id" type="integer" required="true" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="user_id" foreign="id" />
    </foreign-key>
    <column name="start_dt" type="TIMESTAMP" />
    <column name="end_dt" type="TIMESTAMP" />
    <column name="comment" type="varchar" required="true" size="255" />
    <column name="user_profile_version" type="integer" required="true" />
    <foreign-key foreignTable="sf_guard_user_profile">
      <reference local="user_profile_version" foreign="version" />
    </foreign-key>
  </table>

  <table name="timenote_dayoff">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="date" type="date" />
    <column name="yearly" type="boolean" />
    <column name="name" type="varchar" size="100" />
    <column name="description" type="longvarchar" />
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
  </table>

  <table name="sf_guard_user_profile" phpName="sfGuardUserProfile">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="user_id" type="integer" required="true" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="user_id" foreign="id" />
    </foreign-key>
    <column name="remember" type="boolean" />
    <column name="first_name" type="varchar" size="120" />
    <column name="last_name" type="varchar" size="120" />
    <column name="email" type="varchar" size="255" />
    <column name="birthday" type="date" />
    <column name="sciper" type="varchar" size="10" />
    <column name="created_by" type="integer" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="created_by" foreign="id" />
    </foreign-key>
    <column name="version" type="integer" />
    <column name="percent" type="float" />
  </table>

</database>
